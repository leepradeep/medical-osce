function finalQuestion(){
    document.getElementById("screen").innerHTML = `
        <h2>Final Question</h2>
        <div class="question" style="font-size:24px;">
        Will you be this guy's valentine?
        </div>

        <button class="btn" onclick="yesValentine()">Yes</button>
        <button class="btn" onclick="noValentine()">No</button>
    `;
}

function noValentine(){
    document.body.style.transition="1s";
    document.body.style.transform="translateX(2000px)";
}

function yesValentine(){
    document.getElementById("screen").innerHTML = `
        <div class="header">
            <div>CMC Vellore Emergency ICU</div>
